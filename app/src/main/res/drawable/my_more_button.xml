<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/color_home" />
            <gradient android:angle="-90" android:startColor="@color/color_home" android:endColor="@color/color_home"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/color_home" />
            <solid android:color="@color/color_home"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/color_home" />
            <gradient android:angle="-90" android:startColor="@color/color_home" android:endColor="@color/color_home" />
        </shape>
    </item>
</selector>